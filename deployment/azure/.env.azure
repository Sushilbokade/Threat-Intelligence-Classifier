# Azure Environment Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=threat-classifier-rg
AZURE_REGION=eastus
AZURE_APP_NAME=threat-classifier

# App Service Configuration
WEBSITES_PORT=8000
WEBSITES_CONTAINER_START_TIME_LIMIT=1800
WEBSITES_NUMBER_OF_WORKERS=4

# OpenAI Configuration
OPENAI_API_KEY=@Microsoft.KeyVault(SecretUri=...)
OPENAI_MODEL=gpt-4

# Azure Key Vault Configuration
KEY_VAULT_NAME=threat-classifier-kv
KEY_VAULT_SECRET_NAME_API_KEY=OPENAI-API-KEY
KEY_VAULT_SECRET_NAME_ES_PASS=ELASTICSEARCH-PASSWORD

# Elasticsearch Configuration
ELASTICSEARCH_HOST=your-es-host
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=@Microsoft.KeyVault(SecretUri=...)

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=your-connection-string
APPINSIGHTS_SAMPLING_PERCENTAGE=50

# Application Configuration
LOG_LEVEL=INFO
BATCH_SIZE=10
CACHE_TTL=3600
MAX_RETRIES=3

# Security Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60